<?xml version="1.0" encoding="UTF-8"?>
<assembly>
	<id>site-assembly</id>
	<!-- Formats of the assembled files -->
	<formats>
		<!--format>tar.gz</format-->
		<!-- format>tar.bz2</format -->
		<format>zip</format>
	</formats>
	<moduleSets>
		<moduleSet>
			<sources>
				<fileSets>
					<fileSet>
						<directory>.</directory>
					</fileSet>
				</fileSets>
			</sources>
		</moduleSet>
	</moduleSets>
	<fileSets>
		<fileSet>
			<!-- Directory to assemble -->
			<directory>.</directory>
			<!-- Directory to output the archieves. Default is the target directory of the project -->
			<!--includes>
				<include>*.*</include>
			</includes-->
			<excludes>
				<!-- Exclusion of dierctories and files from the assembly -->
				<!-- exclude>*.html</exclude -->
				<exclude>**/assembly/**</exclude>
				<exclude>*.gz</exclude>
				<exclude>*.bz2</exclude>
			</excludes>
		</fileSet>
	</fileSets>
</assembly>
